source 'https://rubygems.org'
gem 'rails', '4.0.5'

gem 'pg'
gem 'turbolinks'
gem 'jquery-rails'

group :assets do
  gem 'haml-rails'
  gem 'sass-rails'
  gem 'compass'
  gem 'bootstrap-sass'
  gem 'autoprefixer-rails'
  gem 'coffee-rails'
  gem 'therubyracer', :platforms => :ruby

  gem 'uglifier'
end

group :development, :test do
  gem 'rspec-rails'
end

group :doc do
  gem 'sdoc', require: false
end
